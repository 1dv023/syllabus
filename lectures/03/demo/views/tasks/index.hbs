<h1>
    <span class="far fa-list-alt"></span> Just Task It
</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Done</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#if viewData.tasks.length }}
        {{#each viewData.tasks}}
        <tr>
            <td class="text-center text-primary"><span class="far fa-{{#if this.done }}check-square{{else}}square{{/if}}"></span></td>
            <td class="w-100 {{#if this.done }} text-muted {{/if}}">{{this.description}}</td>
            <td>
                <a href="/tasks/{{this.id}}/edit"><span class="far fa-edit"></span></a>
                <a href="/tasks/{{this.id}}/remove"><span class="far fa-trash-alt"></span></a>
            </td>
        </tr>
        {{/each}}
        {{else}}
        <tr>
            <td colspan="3" class="text-center text-danger">
                There are no tasks to display.
            </td>
        </tr>
        {{/if}}
    </tbody>
</table>
